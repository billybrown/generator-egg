<article class="Teaser">
	<div class="Teaser__textGroup">
		<header class="Teaser__header">
			<h3 class="Teaser__title">
				<a href="">{{ post.heading.medium }}</a>
			</h3>
			<div class="u-inlineList">
				<div class="Teaser__author">{{ post.author }}</div>
				<div class="Teaser__date">{{ post.date }}</div>
			</div><!-- /u-pipeList -->
		</header>
		<div class="Teaser__content">
			<p>{{ post.excerpt.medium }}</p>
		</div><!-- /.Teaser__Summary -->
	</div><!-- /.Teaser__textGroup -->
	{% if post.img %}
		<div class="Teaser__imageGroup">
			<a href="">
				<img src="{{ post.img.smallRectangle.src }}" alt="" />
			</a>
		</div>
	{% endif %}
</article>