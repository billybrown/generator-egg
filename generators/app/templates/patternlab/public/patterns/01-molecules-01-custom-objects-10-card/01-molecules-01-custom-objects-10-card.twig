&lt;article class=&quot;Card {{ class }}&quot;&gt;
	&lt;div class=&quot;Card__imageGroup&quot;&gt;
		&lt;a href=&quot;&quot;&gt;
			&lt;img src=&quot;{{ post.img.rectangle.src }}&quot; alt=&quot;&quot; /&gt;
		&lt;/a&gt;
	&lt;/div&gt;&lt;!-- /.Card__imageGroup --&gt;
	&lt;div class='Card__textGroup'&gt;
		&lt;header class=&quot;Card__header&quot;&gt;
			&lt;h3 class=&quot;Card__title {{ titleClass }}&quot;&gt;
				&lt;a href=&quot;&quot;&gt;
					{{ post.heading.medium }}
				&lt;/a&gt;
			&lt;/h3&gt;
		&lt;/header&gt;
		{% if post.excerpt %}
			&lt;div class=&quot;Card__content u-smallText&quot;&gt;
				&lt;p&gt;{{ post.excerpt.medium }}&lt;/p&gt;
			&lt;/div&gt;
		{% endif %}
	&lt;/div&gt;&lt;!-- /.Card__textGroup --&gt;
&lt;/article&gt;